<%- include('./layout/header') -%> <br /><br />

<div class="contaner">
  <div class="row">
    <div class="col-sm-1 col-md-2 col-lg-3 col-xl-4"></div>
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-4">
      <h1 class="justify-content-center">This is our Login page!</h1>

      <form
        autocomplete="off"
        target=""
        action="/login"
        method="post"
        enctype=""
      >
        <div class="form-group">
          <label for="">Name:</label>
          <input
            type="text"
            name="name"
            class="form-control"
            id="name"
            placeholder="Name..."
            required
          />
        </div>
        <div class="form-group">
          <label for="">Email:</label>
          <input
            type="email"
            name="email"
            class="form-control"
            id="email"
            placeholder="Email..."
            required
          />
        </div>
        <div class="form-group">
          <label for="">Password:</label>
          <input
            type="password"
            name="password"
            class="form-control"
            required
          />
        </div>
        <br>
        <input type="submit" class="btn btn-primary" value="Submit" />
      </form>
    </div>
    <div class="col-sm-1 col-md-2 col-lg-3 col-xl-4"></div>
  </div>
  <br /><br />

  <%- include('./layout/footer') -%>
</div>
